{
	"version": "2.0.0",
	"tasks": 
	[
		{
			"type": "cppbuild",
			"label": "C/C++: g++ 生成活动文件",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/kwd_code/middle_out/a.out" 
			],
			"options": {
				"cwd": "${workspaceFolder}/kwd_code/Data_Struct"
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "编译器: /usr/bin/g++",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
